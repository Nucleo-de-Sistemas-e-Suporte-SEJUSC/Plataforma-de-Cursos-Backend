{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'Husky não disponível, pulando instalação'",
    "build": "echo 'Build completed'",
    "ci": "npm run lint && npm run format:check && npm test"
  },
  "keywords": ["nodejs", "express", "mysql", "sequelize", "api"],
  "author": "Equipe de Desenvolvimento",
  "license": "ISC",
  "description": "Backend da Plataforma de Cursos com Node.js, Express e MySQL",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.5",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "sqlite3": "^5.1.7"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
